---

<BaseLayout title="Features">
  <!-- Animation showcase -->
  <section class="py-12 pt-24 overflow-hidden">
    <div class="container-main">
      <TimelineRangeAnimation />
    </div>
  </section>

  <!-- Hero -->
  <section class="section-padding pt-8">
    <div class="container-main text-center">
      <h1 class="mb-4">Features</h1>
      <p class="text-xl text-text-secondary max-w-2xl mx-auto">
        Everything you need to eliminate pre-editing
      </p>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="section-padding pt-8">
    <div class="container-main">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {features.map(feature => (
          <div class="card hover:border-brand-red/30 transition-colors">
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
            <p class="text-text-secondary">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding text-center">
    <div class="container-main">
      <h2 class="mb-4">Ready to try it?</h2>
      <p class="text-text-secondary mb-8">Start editing smarter today.</p>
      <Button href="/download" size="lg">Download v0.8.5</Button>
    </div>
  </section>
</BaseLayout>
