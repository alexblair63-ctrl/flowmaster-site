---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Check Your Email"
  description="Complete your Flowmaster Scout registration"
  showNav={false}
>
  <div class="email-sent-page">
    <div class="email-sent-container">
      <div class="logo-container">
        <a href="/" class="logo-link">
          <span class="logo-text">Flowmaster</span>
        </a>
      </div>

      <div class="content animate">
        <div class="icon-container">ðŸ“§</div>
        <h1 class="headline">Check Your Email!</h1>
        <p class="message">
          We've sent a magic link to complete your registration.
          Click the link in the email to continue.
        </p>

        <div class="help-box">
          <p>Didn't receive it? Check your spam folder.</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .email-sent-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .email-sent-container {
    max-width: 500px;
    width: 100%;
    text-align: center;
  }

  .logo-container {
    margin-bottom: 3rem;
    animation: fade-in-up 0.6s ease-out;
  }

  .logo-link { text-decoration: none; }

  .logo-text {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
    color: #f2f2f2;
  }

  .content.animate {
    animation: fade-in-up 0.6s ease-out 0.2s backwards;
  }

  .icon-container {
    font-size: 4rem;
    margin-bottom: 1.5rem;
  }

  .headline {
    font-size: 2.25rem;
    margin-bottom: 1rem;
    color: #f2f2f2;
  }

  .message {
    font-size: 1.125rem;
    color: var(--color-gray-300);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .help-box {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-bg-tertiary);
    border-radius: 0.75rem;
    padding: 1rem 1.5rem;
  }

  .help-box p {
    color: var(--color-gray-400);
    font-size: 0.9rem;
    margin: 0;
  }

  @keyframes fade-in-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
