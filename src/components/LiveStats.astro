<script>
  // Fetch stats from Supabase edge function
  async function fetchStats() {
    try {
      const response = await fetch(
        'https://jwwbwozjvfiheunavbnk.supabase.co/functions/v1/get-public-stats',
        {
          headers: {
            'apikey': 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Imp3d2J3b3pqdmZpaGV1bmF2Ym5rIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjY4MDA1ODAsImV4cCI6MjA4MjM3NjU4MH0.hJau-XnPeTLJ2Q6f-VMNHF4YS92EBDR7FmSKVa3cX10',
          },
        }
      );

      if (!response.ok) {
        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
      }

      const data = await response.json();

      // Update DOM with smooth animation
      const updateValue = (selector: string, value: number) => {
        const el = document.querySelector(selector);
        if (el) {
          el.textContent = value.toLocaleString();
          el.classList.add('stat-updated');
          setTimeout(() => el.classList.remove('stat-updated'), 500);
        }
      };

      updateValue('[data-stat="24h"]', data.active_users.last_24h);
      updateValue('[data-stat="7d"]', data.active_users.last_7d);
      updateValue('[data-stat="14d"]', data.active_users.last_14d);
      updateValue('[data-stat="total"]', data.total_activated);

      // Update timestamp
      const timestamp = new Date(data.timestamp);
      const timestampEl = document.getElementById('stats-timestamp');
      if (timestampEl) {
        timestampEl.textContent = `Updated ${timestamp.toLocaleTimeString()}`;
        timestampEl.classList.remove('stats-error');
      }

    } catch (error) {
      console.error('Stats fetch error:', error);

      // Show error state
      document.querySelectorAll('.stat-value').forEach(el => {
        el.textContent = 'â€”';
      });

      const timestampEl = document.getElementById('stats-timestamp');
      if (timestampEl) {
        timestampEl.textContent = 'Unable to load stats';
        timestampEl.classList.add('stats-error');
      }
    }
  }

  // Fetch on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', fetchStats);
  } else {
    fetchStats();
  }

  // Refresh every 60 seconds
  setInterval(fetchStats, 60000);
</script>

<style>
  .live-stats-section {
    padding: 4rem 0;
    background: linear-gradient(180deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .stats-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .stats-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, var(--color-red) 0%, var(--color-yellow) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .stats-subtitle {
    font-size: 1rem;
    color: var(--color-text-secondary);
  }

  .stats-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .stat-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-bg-tertiary);
    border-radius: 0.75rem;
    padding: 2rem 1.5rem;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-red), var(--color-yellow));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .stat-card:hover {
    border-color: var(--color-red);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(237, 28, 36, 0.2);
  }

  .stat-card:hover::before {
    opacity: 1;
  }

  .stat-icon {
    font-size: 2rem;
    margin-bottom: 0.75rem;
    filter: grayscale(1);
    transition: filter 0.3s ease;
  }

  .stat-card:hover .stat-icon {
    filter: grayscale(0);
  }

  .stat-value {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-red);
    margin-bottom: 0.5rem;
    transition: all 0.3s ease;
    font-variant-numeric: tabular-nums;
  }

  .stat-value.stat-updated {
    transform: scale(1.1);
    color: var(--color-yellow);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .stats-footer {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-bg-tertiary);
  }

  .stats-timestamp {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-family: 'Courier New', monospace;
  }

  .stats-timestamp.stats-error {
    color: var(--color-red);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .stats-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .stat-card {
      padding: 1.5rem 1rem;
    }

    .stat-value {
      font-size: 2rem;
    }

    .stats-title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .stats-container {
      grid-template-columns: 1fr;
    }
  }

  /* Dark mode enhancement */
  @media (prefers-color-scheme: dark) {
    .stat-card {
      background: rgba(20, 15, 12, 0.6);
      backdrop-filter: blur(10px);
    }
  }
</style>
