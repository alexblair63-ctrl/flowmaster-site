---
interface Props {
  class?: string;
}
const { class: className = '' } = Astro.props;
---

<svg
  viewBox="0 0 200 200"
  class={`record-svg ${className}`}
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Keyboard key -->
  <rect
    x="50" y="90"
    width="100" height="70"
    rx="10"
    fill="#252525"
    stroke="#f43f43"
    stroke-width="3"
  />

  <!-- Key surface (3D effect) -->
  <rect
    x="58" y="95"
    width="84" height="55"
    rx="6"
    fill="#1a1a1a"
  />

  <!-- F9 text -->
  <text
    x="100" y="132"
    text-anchor="middle"
    fill="#f43f43"
    font-family="var(--font-heading), sans-serif"
    font-size="28"
    font-weight="bold"
  >
    F9
  </text>

  <!-- Press indicator (circle that pulses) -->
  <circle
    class="press-indicator"
    cx="100"
    cy="50"
    r="12"
    fill="#f43f43"
    opacity="0.8"
  />
</svg>

<style>
  .record-svg .press-indicator {
    animation: pulse-press 2s ease-in-out infinite;
    animation-play-state: paused;
  }

  :global(.animate-active) .record-svg .press-indicator,
  :global(.step-card:hover) .record-svg .press-indicator {
    animation-play-state: running;
  }

  @keyframes pulse-press {
    0%, 100% {
      transform: translateY(0);
      opacity: 0.8;
    }
    50% {
      transform: translateY(30px);
      opacity: 1;
    }
  }
</style>
